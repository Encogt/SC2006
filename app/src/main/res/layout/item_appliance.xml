<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Appliance Name TextView -->
    <TextView
        android:id="@+id/appliance_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Appliance Name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/edit_button"
        android:layout_marginEnd="8dp" />

    <!-- Power Rating EditText -->
    <EditText
        android:id="@+id/power_rating_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Power Rating (W)"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/appliance_name_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/edit_button"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp" />

    <!-- Edit Button -->
    <Button
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Remove Button -->
    <Button
        android:id="@+id/remove_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove"
        app:layout_constraintTop_toBottomOf="@id/edit_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
